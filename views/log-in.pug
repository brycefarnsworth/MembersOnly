extends layout

block content
  h1 #{title} 

  form(method='POST', action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', name='username' value=(undefined===user ? '' : user.username), required='true')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password' required='true')
    button.btn.btn-primary(type='submit') Log In

  if errors
    ul
      for error in errors
        li!= error.msg